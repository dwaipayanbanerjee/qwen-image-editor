# Hugging Face cache (local Mac storage)
# IMPORTANT: Using ~/qwen-image-editor for local Mac deployment
# Model cache is ~57.7GB - ensure you have sufficient disk space
HF_HOME=~/qwen-image-editor/huggingface_cache
TRANSFORMERS_CACHE=~/qwen-image-editor/huggingface_cache
HF_DATASETS_CACHE=~/qwen-image-editor/huggingface_cache

# Jobs directory
# Stores input images, output images, and metadata
JOBS_DIR=~/qwen-image-editor/jobs

# Server configuration
# Listen on all interfaces to allow frontend connection
HOST=0.0.0.0
PORT=8000

# PyTorch memory optimization (works for both MPS and CUDA)
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True
